{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "noImplicitAny": true,
        "removeComments": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "sourceMap": true,
        "inlineSources": true,
        "newLine": "LF",
        "noEmitOnError": true
    },
    "filesGlob": [
        "src/**/*.ts",
        "test/**/*.ts",
        "typings/**/*.ts",
        "node_modules/typescript/lib/lib.es6.d.ts"
    ],
    "files": [
        "src/app.component.ts",
        "src/build-options.d.ts",
        "typings/jasmine/jasmine.d.ts",
        "typings/webpack/webpack-env.d.ts",
        "node_modules/typescript/lib/lib.es6.d.ts"
    ]
}
