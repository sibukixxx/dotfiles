{
  "enabledPlugins": {
    "example-skills@anthropic-agent-skills": true,
    "document-skills@anthropic-agent-skills": true
  },
  "permissions": {
    "allow": [
      "Bash(docker-compose:*)",
      "Bash(git status:*)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(git branch:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git push:*)",
      "Bash(git pull:*)",
      "Bash(git checkout:*)",
      "Bash(git revert:*)",
      "Bash(npm:*)",
      "Bash(pnpm:*)",
      "Bash(yarn:*)",
      "Bash(composer:*)",
      "Bash(make:*)"
    ],
    "deny": []
  },
  "hooks": {
    "SessionStart": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "bun run ~/.claude/hooks/session-start.ts"
          }
        ],
        "description": "Initialize session: show git status, current task, and restore state"
      }
    ],
    "UserPromptSubmit": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "bun run ~/.claude/hooks/user-prompt.ts"
          }
        ],
        "description": "Detect intent and provide contextual hints"
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "bun run ~/.claude/hooks/format.ts"
          }
        ],
        "description": "Auto-format files after edits"
      },
      {
        "matcher": "Edit|Write|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "bun run ~/.claude/hooks/auto-git-add.ts"
          }
        ],
        "description": "Auto-stage tracked files after edits"
      },
      {
        "matcher": "Edit|Write|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "bun run ~/.claude/hooks/error-detector.ts"
          }
        ],
        "description": "Detect TypeScript and lint errors after edits"
      }
    ],
    "Stop": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "bun run ~/.claude/hooks/session-stop.ts"
          }
        ],
        "description": "Save session state and check for uncommitted changes"
      }
    ]
  }
}
